<UserControl x:Class="Watermark.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Watermark"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">
    <Grid Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <local:TelerikEditor Name="editor"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Button Name="addPredefined" Content="Add Predefined Watermark" Click="addPredefined_Click" />
            <Button Name="addText" Content="Add Text Watermark" Click="addText_Click"/>
            <Button Name="addImage" Content="Add Image Watermark" Click="addImage_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
