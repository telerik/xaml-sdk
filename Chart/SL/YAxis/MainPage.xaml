<UserControl x:Class="YAxis.MainPage"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
			 xmlns:local="clr-namespace:YAxis"
			 mc:Ignorable="d"
			 d:DesignHeight="300"
			 d:DesignWidth="400"
			 MinHeight="450"
			 MinWidth="700">
	<Grid>
		<telerik:RadTabControl>
			<telerik:RadTabItem Header="ExtendDirection.Down">
				<local:ExtendDirectionDown />
			</telerik:RadTabItem>

			<telerik:RadTabItem Header="ExtendDirection.Up">
				<local:ExtendDirectionUp />
			</telerik:RadTabItem>

			<telerik:RadTabItem Header="ExtendDirection.Both">
				<local:ExtendDirectionBoth />
			</telerik:RadTabItem>

			<telerik:RadTabItem Header="ExtendDirection.Smart">
				<local:ExtendDirectionSmart />
			</telerik:RadTabItem>

			<telerik:RadTabItem Header="ExtendDirection.None">
				<local:ExtendDirectionNone />
			</telerik:RadTabItem>
		</telerik:RadTabControl>
	</Grid>
</UserControl>
